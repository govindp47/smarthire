# Application
PROJECT_NAME=SmartHire
VERSION=1.0.0
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://smarthire_user:smarthire_pass@localhost:5432/smarthire_db
POSTGRES_USER=smarthire_user
POSTGRES_PASSWORD=smarthire_pass
POSTGRES_DB=smarthire_db

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# AWS S3 (for resume storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=smarthire-resumes

# Vector Store
VECTOR_STORE_PATH=./vector_store
EMBEDDING_MODEL=text-embedding-ada-002

# File Upload
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=pdf,docx

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
